{
  "name": "PawaRngrs/puppeteer-intercept-and-modify-requests",
  "keywords": [
    "puppeteer",
    "intercept",
    "modify",
    "request",
    "chromium",
    "devtools-protocol",
    "network",
    "fetch",
    "mock",
    "stub",
    "testing",
    "utility"
  ],
  "bugs": {
    "url": "https://github.com/PawaRngrs/puppeteer-intercept-and-modify-requests/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PawaRngrs/puppeteer-intercept-and-modify-requests.git"
  },
  "license": "Apache-2.0",
  "author": "PawaRngrs",
  "exports": {
    ".": {
      "import": "./esm/main.js",
      "require": "./cjs/main.js"
    },
    "./*": {
      "import": "./esm/*.js",
      "require": "./cjs/*.js"
    },
    "./cjs": {
      "require": "./cjs/main.js"
    },
    "./cjs/*": {
      "require": "./cjs/*.js"
    },
    "./esm/*": {
      "import": "./esm/*.js"
    },
    "./package.json": "./package.json"
  },
  "main": "cjs/main.js",
  "module": "esm/main.js",
  "source": "src/main.ts",
  "scripts": {
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc --outDir cjs --module commonjs --target es2018",
    "build:esm": "tsc --outDir esm --module esnext --target es2018 && echo '{\"name\": \"puppeteer-intercept-and-modify-requests\", \"type\": \"module\"}' > esm/package.json",
    "clean": "git clean -dfX --exclude=node_modules src",
    "format": "prettier --write \"./src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "postinstall": "npm run build",
    "test": "npm run test:format && npm run test:types && npm run test:lint && npm run test:code",
    "test:code": "jest",
    "test:format": "prettier --check \"./src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "test:lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test:types": "tsc --noEmit"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "main",
        "channel": false
      },
      "next",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "tagFormat": "${version}"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "get-port": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "puppeteer": "^21.5.0",
    "puppeteer-core": "^21.5.0",
    "ts-jest": "^29.1.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "escape-string-regexp": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
